@model IEnumerable<PrvaAplikacija.Models.Racun>

@{
    ViewBag.Title = "Lista računa";
}

<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RacunID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrijeme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UkupnoZaPlatiti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RacunID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vrijeme)
        </td>
        <td class="Desno">
            @Html.DisplayFor(modelItem => item.UkupnoZaPlatiti)
        </td>
        <td>
            @Html.ActionLink("Detalji", "Details", new { id=item.RacunID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.RacunID })
        </td>
    </tr>
}

</table>

<span class="btn btn-success Desno"> @Html.ActionLink("Kreiraj novi", "Create", "Stavka") </span>
<br>
