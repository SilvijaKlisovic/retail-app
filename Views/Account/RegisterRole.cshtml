@model RetailApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Dodijeli rolu korisniku";
}

<h2>Dodijeli rolu korisniku</h2>


@using (Html.BeginForm("RegisterRole","Account",FormMethod.Post, new {@class = "form-horisontal", role="form"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Odaberite Korisnika", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserName")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Odaberite rolu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Name")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
