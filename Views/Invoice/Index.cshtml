@model IEnumerable<RetailApp.Models.Invoice>

@{
    ViewBag.Title = "Lista računa";
}

<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JIRRacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrijeme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UkupnoZaPlatiti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JIRRacuna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vrijeme)
        </td>
        <td class="Desno">
            @Html.DisplayFor(modelItem => item.UkupnoZaPlatiti)
        </td>
        <td>
            @Html.ActionLink("Detalji", "Details", new { id=item.InvoiceID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.InvoiceID })
        </td>
    </tr>
}

</table>

<button class="button btn btn-info LinkoviBijeli" type="button" onclick="location.href='@Url.Action("Create", "InvoiceLine")'">Kreiraj novi</button>
<br>
